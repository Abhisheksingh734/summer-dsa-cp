{
  "manifest_version": 3,
  "name": "Water Drinker Reminder",
  "version": "1.0",
  "description": "Stay hydrated with customizable water consumption reminders.",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  }
  
}
